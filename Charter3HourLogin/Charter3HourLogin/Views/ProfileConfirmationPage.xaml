<?xml version="1.0" encoding="utf-8" ?>
<views:BasePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             xmlns:views="clr-namespace:Charter3HourLogin.Views;assembly=Charter3HourLogin"
             xmlns:common="clr-namespace:Charter3HourLogin.Common;assembly=Charter3HourLogin.Common"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="Charter3HourLogin.Views.ProfileConfirmationPage"
             NavigationPage.HasBackButton="False">
    <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand"
        Style="{StaticResource LoginStack}"
        Spacing="16">
        <Label
            Text="{x:Static common:Constants.SuccessMessage}"
            TextColor="{StaticResource PrimaryColor}"
            FontSize="Large"
            FontAttributes="Bold"
            FontFamily="{StaticResource  SFProText}"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            VerticalOptions="Center"
            />
        <Button Text="Log In" 
                BackgroundColor="{StaticResource PrimaryColor}"
                Command="{prism:NavigateTo LoginPage}"></Button>
    </StackLayout>
</views:BasePage>